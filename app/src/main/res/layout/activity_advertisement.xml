<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdvertisementActivity">

    <ImageView
        android:id="@+id/iv_splash_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:src="@drawable/ic_splash_slogan"/>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_ad_skip"
        android:paddingLeft="12dp"
        android:paddingTop="4dp"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="跳过 5"
        android:textColor="@color/white"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/iv_splash_ad"
        app:layout_constraintTop_toTopOf="@+id/iv_splash_ad" />


</androidx.constraintlayout.widget.ConstraintLayout>